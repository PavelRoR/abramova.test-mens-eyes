$textColor = #4BDE86;

@font-face {
	font-family: 'ComfortaaBold';
	src: url('../fonts/ComfortaaBold.eot');
	src: url('../fonts/ComfortaaBold.eot') format('embedded-opentype'),
		 url('../fonts/ComfortaaBold.woff2') format('woff2'),
		 url('../fonts/ComfortaaBold.woff') format('woff'),
		 url('../fonts/ComfortaaBold.ttf') format('truetype'),
		 url('../fonts/ComfortaaBold.svg#ComfortaaBold') format('svg');
	font-display: fallback;
	font-weight: bold;
	font-style: normal;
}
@font-face {
	font-family: 'ComfortaaLight';
	src: url('../fonts/ComfortaaLight.eot');
	src: url('../fonts/ComfortaaLight.eot') format('embedded-opentype'),
		 url('../fonts/ComfortaaLight.woff2') format('woff2'),
		 url('../fonts/ComfortaaLight.woff') format('woff'),
		 url('../fonts/ComfortaaLight.ttf') format('truetype'),
		 url('../fonts/ComfortaaLight.svg#ComfortaaLight') format('svg');
	font-display: fallback;
	font-weight: 100;
	font-style: normal;
}
@font-face {
	font-family: 'Comfortaa';
	src: url('../fonts/Comfortaa.eot');
	src: url('../fonts/Comfortaa.eot') format('embedded-opentype'),
		 url('../fonts/Comfortaa.woff2') format('woff2'),
		 url('../fonts/Comfortaa.woff') format('woff'),
		 url('../fonts/Comfortaa.ttf') format('truetype'),
		 url('../fonts/Comfortaa.svg#Comfortaa') format('svg');
	font-display: fallback;
	font-weight: normal;
	font-style: normal;
}

@import '../css/_css/bootstrap.min.css'

*
	margin 0
	padding 0
	outline none
body
	background-color #fff
	color #000
	font-size: 18px
	font-family: "Arial", sans-serif
	line-height: 1.3
a
	color: #fefefe
	&:focus
		outline: 0
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 3px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.button
	display: block
	background-color: #36BC6E
	color: #fff
	font-size: 20px
	font-family: 'Comfortaa', sans-serif
	text-align: center
	height 54px
	line-height: 54px
	width 100%
	max-width 350px
	margin 0 auto
	padding 5px
	border: 1px solid #36BC6E
	background-clip: content-box
	text-decoration: none
	box-sizing: content-box
	transition: all .3s ease
	&:focus
		text-decoration: none
		color #fff
	&:hover
		text-decoration: none
		color: #fff
		transform: scale(.98)
@import 'main/header'
@import 'trip/main'
@import 'trip/info'
@import 'trip/last'
@import 'trip/footer'
@import 'trip/medias'