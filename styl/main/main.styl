.main
	background-repeat no-repeat
	background-position: center
	background-size: cover
	background-color: #5A5857
	color: #fff
.main-start
	padding 45px 0 70px
	background-image: url(../img/backgrounds/main_bg.jpg)
	text-align: center
	font-family: 'Comfortaa', sans-serif
	font-size: 20px
.main-question
	padding 110px
	 0 180px
	font-family: 'Comfortaa', sans-serif
.main-question-1
	background-image url(../img/backgrounds/q1_bg.jpg)
.main-question-2
	background-image url(../img/backgrounds/q2_bg.jpg)
.main-question-3
	background-image url(../img/backgrounds/q3_bg.jpg)
.main-question-4
	background-image url(../img/backgrounds/q4_bg.jpg)
.main-end
	font-family: 'Comfortaa', sans-serif
	padding: 160px 0 50px
	background-image url(../img/backgrounds/end_bg.jpg)
	background-position: center top
	min-height calc(100vh - 67px)
.start-pre
	color:  $textColor
	margin-bottom: 48px
.end-pre
	font-size: 20px
	margin-left: 25px
.start-title
	font-size: 20px
	span
		display block
		font-size: 36px
		color $textColor
		background-image url(../img/backgrounds/title_border.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
		width 100%
		max-width 451px
		margin 15px auto 0
		padding: 8px 12px
.question-title
	color $textColor
	background-image url(../img/backgrounds/q_border.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
	width 100%
	max-width 340px
	text-align: center
	font-size: 36px
	padding 5px
	margin 0 0 30px 25px
.end-title
	position relative
	margin 30px 0 60px 25px
	color: $textColor
	font-size: 36px
	&:before
		content: ''
		position: absolute
		left -65px
		top: 0
		width 36px
		height 34px
		background-image url(../img/icons/title.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
.start-subtitle
	margin: 54px auto 0
	width 100%
	max-width 515px
.question-subtitle
	position relative
	margin 0 0 0 25px
	width 100%
	max-width 600px
	&:before
		content: ''
		position: absolute
		left -65px
		top: 0
		width 36px
		height 34px
		background-image url(../img/icons/title.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
.end-form
	width 100%
	max-width 360px
.input
	width 100%
	display block
	margin-bottom: 40px
	padding 0 25px
	height 55px
	line-height: 53px
	border: 1px solid $textColor
	color: #7e7e7e
	font-size: 20px
	background-color: #fff
@-webkit-keyframes autofill {
	to {
		color: #7e7e7e;
		background: #ffff;
	}
}

input:-webkit-autofill {
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
}
.checking
	margin-top: 10px
	font-size: 14px
	font-family: 'Arial', sans-serif
.check_label a
	text-decoration: none
	border-bottom: 1px dashed
	color: #fff
	&:focus
		text-decoration: none
		color #fff
	&:hover
		text-decoration: none
		border-bottom: none
.modal-wrapper
	opacity 1
	position: fixed
	top 0
	bottom 0
	left 0
	right 0
	background-color: rgba(0,0,0,.8)
	z-index 99
	width 100%
	height 100%
	overflow-x: hidden;
	overflow-y: auto;
.modal-window
	position: absolute
	top 0
	left 0
	right 0
	margin 20px auto
	border-radius: 5px
	background-color #fff
	box-shadow: 0 0 24px 13px rgba(255,255,255,0.63);
	padding 20px
	width 100%
	max-width 800px
	height auto
	max-height 90%
	max-height 90vh
	z-index: 99;
	overflow-x: hidden;
	overflow-y: auto;
button.close
	position absolute
	width: 35px
	height 35px
	border-radius: 50px
	line-height: 30px
	text-align: center
	font-size: 24px
	color: #000
	background-color: #F0F0F0
	top 10px
	right 10px
	left auto
	z-index 99
	opacity 1
	transition: all .1s ease-in-out
	&:hover
		color: #F0F0F0
		background-color: #000
.customHidden
	opacity: 0;
	z-index: -9999
.body-scroll
	overflow hidden
	padding-right: 17px
.modal-title
	font-size: 24px
	margin-bottom: 20px
	color #000
	width 100%
	max-width 85%
.modal-window
	p
		color: #000
		line-height: 1.4
		margin-bottom: 15px
		width 100%
		max-width 95%