#info
	padding 60px 0
.general-title
	font-size: 26px
	font-family: 'ComfortaaBold', sans-serif
	color:  $textColor
	margin-bottom: 30px
	text-align: center
.info-list
	list-style none
	margin: 0 auto 40px
	width 100%
	max-width 650px
	li
		position relative
		line-height: 1.5
		margin-bottom: 20px
		padding-left: 20px
		&:last-child
			margin-bottom: 0
		&:before
			content: ''
			position: absolute
			display block
			width 7px
			height 7px
			background-color: #36BC6E
			border-radius: 25px
			top 10px
			left 0