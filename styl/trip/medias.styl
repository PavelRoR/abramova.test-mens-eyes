@media screen and (min-width 2295px)
	body
		font-size: 20px
@media screen and (max-width 991px)
	header
		padding: 15px 0
	#logo
		float: none
		display block
		margin  0 auto 5px
	.contacts
		text-align: center
		float: none
	.contact
		margin 5px 5px 0
