footer
	background: #242933
	position relative
	padding: 20px 0
	text-align: center
footer
	h5
		font-size: 22px;
		color: rgb(255, 255, 255);
		font-family: 'ComfortaaBold', sans-serif
	p
	#conditions
		font-size: 14px;
		font-family: "ComfortaaLight", serif;
		color: rgba(255, 255, 255, 0.6);
		line-height: 1.786;
	#conditions
		text-decoration underline
		&:hover
		&:focus
			text-decoration none
.soc-buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 15px 8px
		position relative
		z-index: 1
		transition: all .3s ease
		width: 30px;
		height: 30px;
		background-color #fff
		padding 2px
		background-clip: content-box
		line-height 26px
		border 1px solid rgba(#9a8958, .45)
		.fa
			color #1C2430
		&:hover
			transform: scale(.96)